---
interface Props {
    items:{
        title:string,
        description:string,
        image:string,
        link:string,
        tags:{
            name:string,
            class:string
        }[]
    }[]
}

const { items } = Astro.props
---
{
    items.map((info) => {
        return (
            <br>
            <article>
                <h3 class="text-2xl font-semibold mb-2 text-black dark:text-white">{info.title}</h3>
                <p class="text-lg mb-4 text-pretty text-black dark:text-white">{info.description}</p>
                <ul class="flex gap-x-2 flex-row pb-2">
                    {info.tags?.map((tag) => {
                        return (
                            <span class=`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-2`><li>{tag.name}</li></span>
                        )
                    })}
                </ul>
                <a href={info.link}><img class="rounded shadow-2xl shadow-white/20" src={info.image} alt={info.title}></img></a>
            </article>
        )
    })
}